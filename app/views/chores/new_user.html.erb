              <% else %>
                <br><input type="submit" value="✔"> <%= chore.name %>
              <% end %>
            </form>
          <% end %>
        </div>
        <% end %>
      <% else %>
        <p>Looks like you're all caught up.  Check back tomorrow!
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="column2">
      <h3>Weekly</h3>
      <% if @weekly_chores.count > 0 %>
        <% @weekly_chores.each_slice(@weekly_chores_count) do |chores| %>
